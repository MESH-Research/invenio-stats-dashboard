{
  "index_patterns": ["__SEARCH_INDEX_PREFIX__stats-community-records-snapshot-*"],
  "template": {
    "settings": {
      "index": {
        "refresh_interval": "5s",
        "number_of_shards": 1,
        "number_of_replicas": 1
      }
    },
    "mappings": {
      "date_detection": false,
      "dynamic": "strict",
      "numeric_detection": false,
      "properties": {
        "timestamp": {
          "type": "date",
          "format": "strict_date_hour_minute_second"
        },
        "community_id": {
          "type": "keyword"
        },
        "community_parent_id": {
          "type": "keyword"
        },
        "snapshot_date": {
          "type": "date",
          "format": "strict_date_hour_minute_second"
        },
        "record_count": {
          "type": "object",
          "properties": {
            "metadata_only": {
              "type": "integer"
            },
            "with_files": {
              "type": "integer"
            }
          }
        },
        "parent_count": {
          "type": "object",
          "properties": {
            "metadata_only": {
              "type": "integer"
            },
            "with_files": {
              "type": "integer"
            }
          }
        },
        "files": {
          "type": "object",
          "properties": {
            "file_count": {
              "type": "long"
            },
            "data_volume": {
              "type": "long"
            }
          }
        },
        "uploaders": {
          "type": "integer"
        },
        "subcounts": {
          "type": "object",
          "properties": {
            "all_resource_types": { "$ref": "subcount"
            },
            "all_access_rights": { "$ref": "subcount"
            },
            "all_languages": { "$ref": "subcount"
            },
            "top_affiliations": { "$ref": "subcount"
            },
            "top_funders": { "$ref": "subcount"
            },
            "top_subjects": { "$ref": "subcount"
            },
            "top_publishers": { "$ref": "subcount"
            },
            "top_periodicals": { "$ref": "subcount"
            }
          }
        },
        "updated_timestamp": {
          "type": "date",
          "format": "strict_date_hour_minute_second"
        }
      }
    },
    "definitions": {
      "subcount": {
        "type": "nested",
        "properties": {
          "id": {
            "type": "keyword"
          },
          "label": {
            "type": "object",
            "properties": {
              "lang": {
                "type": "keyword"
              },
              "value": {
                "type": "keyword"
              }
            }
          },
          "record_count": {
            "type": "object",
            "properties": {
              "metadata_only": {
                "type": "long"
              },
              "with_files": {
                "type": "long"
              }
            }
          },
          "parent_count": {
            "type": "object",
            "properties": {
              "metadata_only": {
                "type": "long"
              },
              "with_files": {
                "type": "long"
              }
            }
          },
          "files": {
            "type": "object",
            "properties": {
              "file_count": {
                "type": "long"
              },
              "data_volume": {
                "type": "long"
              }
            }
          }
        }
      }
    },
    "aliases": {
      "__SEARCH_INDEX_PREFIX__stats-community-records-snapshot": {}
    }
  },
  "priority": 100,
  "version": 1,
  "_meta": {
    "description": "Cumulative counts of community records at a point in time, including subcounts based on several record metadata fields."
  }
}
